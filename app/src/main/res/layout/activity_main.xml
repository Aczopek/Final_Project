<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tronicles.fitnesshelper.MainActivity"
    android:background="@drawable/workout">

    <Button
        android:id="@+id/macrocalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/wroutine"
        android:layout_marginBottom="117dp"
        android:text="Macro Calculator" />

    <Button
        android:id="@+id/calcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/wroutine"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:text="Calorie Counter" />

    <Button
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wroutine"
        android:layout_alignStart="@+id/wroutine"
        android:text="Calendar" />

    <Button
        android:id="@+id/wroutine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/calcount"
        android:layout_centerVertical="true"
        android:text="Workout Routine" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="serif"
        android:text="Fitness Helper"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>
