<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/workout3">

    <Button
        android:id="@+id/calc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/light"
        android:layout_below="@+id/gainmore"
        android:layout_marginTop="27dp"
        android:text="Calculate"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="31dp"
        android:text="Age:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editAge"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/age"
        android:layout_alignBottom="@+id/age"
        android:layout_toEndOf="@+id/age"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/age"
        android:layout_below="@+id/editAge"
        android:text="Gender:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editAge"
        android:layout_toEndOf="@+id/gender"
        android:text="Male"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/male"
        android:layout_alignBottom="@+id/male"
        android:layout_toEndOf="@+id/male"
        android:text="Female"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/gender"
        android:layout_below="@+id/gender"
        android:text="Current Weight:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editWeight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/weight"
        android:layout_alignBottom="@+id/weight"
        android:layout_toEndOf="@+id/weight"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weight"
        android:layout_below="@+id/editWeight"
        android:text="Height:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/feet"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_below="@+id/weight"
        android:layout_toEndOf="@+id/height"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/height"
        android:layout_toEndOf="@+id/feet"
        android:text="'"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inches"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editWeight"
        android:layout_toEndOf="@+id/inches"
        android:text="''"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activlev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/height"
        android:layout_below="@+id/feet"
        android:text="Activity Level:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/sedentary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/activlev"
        android:text="Sedentary"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sedentary"
        android:layout_alignBottom="@+id/sedentary"
        android:layout_alignStart="@+id/extreme"
        android:text="Light"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/moderate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sedentary"
        android:layout_toEndOf="@+id/activlev"
        android:text="Moderate"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/extreme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/moderate"
        android:layout_alignBottom="@+id/moderate"
        android:layout_toEndOf="@+id/moderate"
        android:text="Extreme"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/feet"
        android:layout_alignTop="@+id/losemore"
        android:text="Goal Weight:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/losemore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView10"
        android:text="Lose 20%"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/loseless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/losemore"
        android:layout_below="@+id/losemore"
        android:text="Lose 10%"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/maintain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/loseless"
        android:layout_below="@+id/loseless"
        android:text="Maintain"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/gainmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/maintain"
        android:layout_below="@+id/gainless"
        android:text="Gain 20%"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/gainless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/maintain"
        android:layout_below="@+id/maintain"
        android:text="Gain 10%"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editWeight"
        android:layout_alignBottom="@+id/editWeight"
        android:layout_toEndOf="@+id/editWeight"
        android:text="lbs"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
